<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:srcCompat="@mipmap/logo"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAppName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="VW Caddy"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFaName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="EVIDENCE VYŘAZENÝCH PODSESTAV"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="Přidat vadnou podsestavu"
                app:srcCompat="@mipmap/list"
                android:onClick="displayList"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/llShift"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="0"
            android:background="#ddd"
            android:gravity="top|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNight"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.3"
                android:height="65dp"
                android:backgroundTint="@drawable/shift_button"
                android:minHeight="65dp"
                android:text="Noční"
                android:textColor="@color/white"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:onClick="shiftClick"/>

            <Button
                android:id="@+id/btnMorning"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.3"
                android:height="65dp"
                android:backgroundTint="@drawable/shift_button"
                android:minHeight="65dp"
                android:text="Ranní"
                android:textColor="@color/white"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:onClick="shiftClick"/>

            <Button
                android:id="@+id/btnAfternoon"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.3"
                android:height="65dp"
                android:backgroundTint="@drawable/shift_button"
                android:minHeight="65dp"
                android:text="Odpolední"
                android:textColor="@color/white"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:onClick="shiftClick"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="4"
                        android:rowCount="2"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:id="@+id/llUzsb1l"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:tag="uzsb1l">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/left"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 1"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                                <ImageButton
                                    android:id="@+id/btnUzsb1l"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:src="@drawable/uzsb1l"
                                    android:tag="uzsb1l"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:onClick="removeClick"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUzsb2l"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:tag="uzsb2l">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/left"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 2"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                            android:layout_height="0dp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/btnUzsb2l"
                                android:layout_height="match_parent"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:src="@drawable/uzsb2l"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:onClick="removeClick"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUzsb3l"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:tag="uzsb3l">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/left"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 3"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                                <ImageButton
                                    android:id="@+id/btnUzsb3l"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:src="@drawable/uzsb3l"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:onClick="removeClick"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUzsb4l"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/left"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 4"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                                <ImageButton
                                    android:id="@+id/btnUzsb4l"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:textColor="#000"
                                    android:src="@drawable/uzsb4l"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:onClick="removeClick"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUzsb1r"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/right"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 1"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <ImageButton
                                android:id="@+id/btnUzsb1r"
                                android:layout_height="match_parent"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:src="@drawable/uzsb1r"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:onClick="removeClick"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUzsb2r"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/right"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 2"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <ImageButton
                                android:id="@+id/btnUzsb2r"
                                android:layout_height="match_parent"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:src="@drawable/uzsb2r"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:onClick="removeClick" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUzsb3r"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/right"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 3"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <ImageButton
                                android:id="@+id/btnUzsb3r"
                                android:layout_height="match_parent"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:src="@drawable/uzsb3r"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:onClick="removeClick" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUzsb4r"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:layout_margin="5dp"
                            android:background="@drawable/border"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/right"
                                android:paddingLeft="5dp"
                                android:textColor="#000"
                                android:text="UZSB 4"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btnUzsb4r"
                                android:layout_height="match_parent"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:src="@drawable/uzsb4r"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:onClick="removeClick"/>

                        </LinearLayout>
                    </GridLayout>
                </HorizontalScrollView>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="0"
            android:background="#ddd"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:height="65dp"
                android:minHeight="65dp"
                android:text="Zpět"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="0.4"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@drawable/shift_button"
                android:onClick="back"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:height="65dp"
                android:minHeight="65dp"
                android:text="Uložit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="0.4"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@drawable/save_button"
                android:onClick="save"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>